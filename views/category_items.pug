extends layout

block content
  h1= title
    h2= category.name

    ul
      each item in category_items
        li
          a(href=item.url) #{item.name}
      else
        li There are no items in this category.
    
    a(href=`/item/${category._id}/create`) Create new item in #{category.name}
    div
      a(href="delete") Delete category